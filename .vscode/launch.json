    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python:(测试QBInterface)",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${workspaceRoot}/../.QBI_venv/bin/python",
            "program": "${workspaceRoot}/run.py",
            "cwd": "${workspaceRoot}",
            "env": {
                "FLASK_APP": "${workspaceRoot}/run.py"
            },
            "args": [
                // "run",
                // "--no-debugger",
                // "--no-reload",
                "--webapi",
                "--webapi_config","test",
                "--graphapi_config","dev_test",
                "--esapi_config","dev_test",
                "--es_search_config","dev_test"
            ],
            "envFile": "${workspaceRoot}/.env",
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}